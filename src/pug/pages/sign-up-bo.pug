extends ../_template

block variables
  - let title       = 'Staffeak'
  - let description = 'Staffeak'

mixin item(icon, period, cost)
  .pricing__item-wrap
    input(type='radio' name="pricing").pricing__radio
    .pricing__item
      .pricing__icon
        img(src="assets/img/pricing-icon-" + icon + ".svg" alt="icon")
      .pricing__period #{period}
      .pricing__cost #{cost}
      .pricing__often per month

block content
  #main-wrap.main-wrap
    include ../sections/header-bo

    //begin content
    main.main
      //BEGIN page-top
      .page-top.bg-rounds.sign-up-co-page-top
        .container
          .search-no-res-page-top__title-wrap
            h2.page-top__title.sign-up-co-page-top__title Profile
      //END   page-top

      form.sign-up-co.cabinet
        .container
          //BEGIN LEFT
          .cabinet__left
            h3.cabinet__title Business Logo
            .sign-up-co__ava
              .sign-up-co__ava-text
                span Upload your photo
                span (jpg, jpeg, png, gif)<br>size less than 2Mb

            //-BEGIN download
            //-.download
              .download__input
                input(type='file')
                span.download__input-filename
                span Upload your document
                .download__input-filename Upload your document
                .download__icon-start
                  img(src="assets/img/i-download.svg" alt="icon")
                .download__icon-success
                  img(src="assets/img/i-download-success.svg" alt="icon")
              .download__footer pdf, txt, doc, docx, jpeg and size less than 5Mb
            //-END   download

            //-button.download-more add one more
          //END   LEFT

          //BEGIN RIGHT
          .cabinet__right
            //BEGIN block personal
            .cabinet__inputs-block
              h3.cabinet__title Personal information
              .cabinet__input-row
                .input
                  input(placeholder="Business name")
                  span Business name
                  span Some error text
                .input
                  input(placeholder="Website")
                  span Website
                  span Some error text
              .cabinet__input-row
                .input
                  input(placeholder="Tax ID")
                  span Tax ID
                  span Some error text
                .input
                  input(placeholder="Contact person")
                  span Contact person
                  span Some error text
              .cabinet__input-row
                .input
                  input(placeholder="Email")
                  span Email
                  span Some error text
                .input
                  input(placeholder="Phone")
                  span Phone
                  span Some error text
              .cabinet__input-row.cabinet__input-row--lg
                .textarea
                  textarea(placeholder="Business description")
                  span Business description
                  span Some error text
            //END   block

            //BEGIN block address
            .cabinet__inputs-block
              h3.cabinet__title Address
              .cabinet__input-row
                .select
                  select
                    option(value="State") State
                    option(value="1-2 years") 1-2 years
                    option(value="3-5 years") 3-5 years
                    option(value="10-200 years") 10-200 years
                  span State
                  span Some error text
                .select
                  select
                    option(value="City") City
                    option(value="1-2 years") 1-2 years
                    option(value="3-5 years") 3-5 years
                    option(value="10-200 years") 10-200 years
                  span City
                  span Some error text

              .cabinet__input-row
                .input
                  input(placeholder="Address")
                  span Address
                  span Some error text
                .input
                  input(placeholder="ZIP")
                  span ZIP
                  span Some error text
            //END   block

            //BEGIN block address
            .cabinet__inputs-block
              h3.cabinet__title Pick subscription
              //BEGIN pricing__list
              .cabinet__pricing-list
                +item('02', '3 month', '$99.99')
                +item('03', '6 month', '$89.99')
                +item('04', '12 month', '$79.99')
              //END   pricing__list
            //END   block

            //BEGIN block BTNS
            .cabinet__btns-block
              button.cta-btn.cabinet__cta-btn
                span Save
                +svg('arr-right')
            //END   block
          //END   RIGHT
    //end content

    include ../sections/footer
    include ../elements/popups
    include ../sections/scripts
