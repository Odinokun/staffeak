extends ../_template

block variables
  - let title       = 'Staffeak'
  - let description = 'Staffeak'

mixin item(icon, period, cost)
  .pricing__item-wrap
    input(type='radio' name="pricing").pricing__radio
    .pricing__item
      .pricing__icon
        img(src="assets/img/pricing-icon-" + icon + ".svg" alt="icon")
      .pricing__period #{period}
      .pricing__cost #{cost}
      .pricing__often per month

block content
  #main-wrap.main-wrap
    include ../sections/header-bo-ava

    //begin content
    main.main
      //BEGIN page-top
      .page-top.bg-rounds.subscribe-page-top
        .container
          h2.page-top__title Subscription

          .profile-bo__subscription
            .profile-bo__subscription-header
              span.profile-bo__subscription-text 3 Month

            .slider-range-single.slider-range-single-percent
              input.slider-range-single__input.slider-range-single__input--finish(style="width: 76%" data-finish='76', data-max='100')
              .slider-range-single__scale
      //END   page-top

      //BEGIN subscription
      .subscription
        .container
          //BEGIN subscription__info
          .subscription__info
            //BEGIN left
            .subscription__info-left
              .subscription__info-row
                span ID
                span 000000000088
              .subscription__info-row
                span Customer
                span Jack Jonson
              .subscription__info-row
                span Current period
                span 06 June 2022 - 05 September 2022
              .subscription__info-row
                span Created
                span 06 June 2022
              .subscription__info-row.subscription__info-row--status
                span Status
                span Active
            //END   left

            //BEGIN right
            .subscription__info-right
              //BEGIN card
              .subscription__info-card-wrap
                .profile-bo__ava-clear-btn
                .subscription__info-card
                  .subscription__info-card-logo
                    img(src="assets/img/visa.svg" alt="visa")
                  .subscription__info-card-date
                    span mm / yy
                    span 08 / 26
                  .subscription__info-card-number
                    span 0000
                    span 0000
                    span 0000
                    span 0008
              //END   card
            //END   right
          //END   subscription__info

          //BEGIN subscription__plan
          .subscription__plan
            h3.cabinet__title Subscription Plan
            //BEGIN pricing__list
            .cabinet__pricing-list
              +item('02', '3 month', '$99.99')
              +item('03', '6 month', '$89.99')
              +item('04', '12 month', '$79.99')
            //END   pricing__list
            .subscription__plan-footer
              .subscription__plan-check
                .check
                  input(type='checkbox' name='auto-subscribe' checked)
                  span
                .subscription__plan-check-text Auto renew subscription
              button.cta-btn.subscription__plan-cta-btn
                span Save
                +svg('arr-right')
          //END   subscription__plan

          //BEGIN subscription__invoices
          .subscription__invoices
            h3.cabinet__title Invoices
            .subscription__invoices-table-wrap
              .subscription__invoices-table
                .subscription__invoices-table-header
                  .subscription__invoices-th Amount
                  .subscription__invoices-th Date
                  .subscription__invoices-th Card
                  .subscription__invoices-th Status
                  .subscription__invoices-th Invoice
                .subscription__invoices-table-row
                  .subscription__invoices-td $ 299.97
                  .subscription__invoices-td 06 June 2022 18:48
                  .subscription__invoices-td ****  0008
                  .subscription__invoices-td Succeeded
                  .subscription__invoices-td <a href="#" target="_blank">Download</a>
                .subscription__invoices-table-row
                  .subscription__invoices-td $ 299.97
                  .subscription__invoices-td 05 March 2022 11:11
                  .subscription__invoices-td ****  0008
                  .subscription__invoices-td Succeeded
                  .subscription__invoices-td <a href="#" target="_blank">Download</a>
                .subscription__invoices-table-row
                  .subscription__invoices-td $ 299.97
                  .subscription__invoices-td 01 January 2022 20:42
                  .subscription__invoices-td ****  0008
                  .subscription__invoices-td Succeeded
                  .subscription__invoices-td <a href="#" target="_blank">Download</a>
                .subscription__invoices-table-row
                  .subscription__invoices-td $ 959.88
                  .subscription__invoices-td 06 September 2022 18:48
                  .subscription__invoices-td ****  0008
                  .subscription__invoices-td Canceled
                  .subscription__invoices-td
          //END   subscription__invoices
      //END   subscription
    //end content

    include ../sections/footer
    include ../elements/popups
    include ../sections/scripts
